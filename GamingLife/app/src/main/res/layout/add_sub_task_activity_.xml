<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_sub_task_activity_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="19dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="11dp"
    android:background="@drawable/subtask"
    tools:context="com.example.gaminglife.AddSubTask">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#fee06b"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_below="@+id/title_text"
            android:id="@+id/linearlay_subTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set the date of tasks in order, which means you can't set a task that finishes later before the task that finishes earlier."
                android:textSize="20dp"
                android:textColor="#ff4242"/>
            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="40dp"/>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
